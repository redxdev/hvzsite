<div class="container">
    <div class="vertical-space"></div>

    <div class="row">
        <div class="col-sm-12 text-center">
            <h2>Create Poll</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <form>
                <div class="form-group">
                    <label for="pollTitle">Title</label>
                    <input type="text" id="pollTitle" class="form-control" placeholder="title"
                           value="{{model.poll.title}}">
                </div>

                <div class="form-group">
                    <label for="pollTeam">Team</label>
                    <select class="form-control" id="pollTeam">
                      {{#if (eq model.poll.team 'all')}}
                          <option value="all" selected>All</option>
                          <option value="human">Human</option>
                          <option value="zombie">Zombie</option>
                      {{else if (eq model.poll.team 'human')}}
                          <option value="all">All</option>
                          <option value="human" selected>Human</option>
                          <option value="zombie">Zombie</option>
                      {{else}}
                          <option value="all">All</option>
                          <option value="human">Human</option>
                          <option value="zombie" selected>Zombie</option>
                      {{/if}}
                    </select>
                </div>

                <div class="form-group">
                    <label for="pollPostDate">Post Date</label>
                    <input type="datetime-local" id="pollPostDate" class="form-control" value="{{model.poll.postDate}}">
                </div>

                <div class="form-group">
                    <label for="pollEndDate">End Date</label>
                    <input type="datetime-local" id="pollEndDate" class="form-control" value="{{model.poll.endDate}}">
                </div>

                <div class="form-group">
                    <label for="pollBody">Body</label>
                    <textarea id="pollBody" class="form-control">{{{model.poll.body}}}</textarea>
                </div>

                <div class="form-group">
                    <label for="pollQuestion">Question</label>
                    <input type="text" id="pollQuestion" class="form-control" placeholder="question"
                           value="{{model.poll.question}}">
                </div>

                <div>
                    <label>Options</label>
                    <p class="help-block">Changing anything here will reset all votes for the poll.</p>
                    <div id="poll-options">
                      {{#each model.poll.options as |option|}}
                          <div class="form-group needs-init">
                              <div class="input-group">
                                  <input class="form-control" placeholder="option" value="{{option}}">
                              <span class="input-group-btn">
                                  <button class="btn btn-danger" type="button">
                                      <span class="glyphicon glyphicon-remove"></span>
                                  </button>
                              </span>
                              </div>
                          </div>
                      {{/each}}
                    </div>
                    <button type="button" class="btn btn-primary" {{action 'addOption'}}>
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </div>

                <button id="saveButton" type="submit"
                        class="btn btn-default pull-right" {{action 'save' model.poll.id}}>
                    Save
                </button>
            </form>
        </div>
    </div>
</div>