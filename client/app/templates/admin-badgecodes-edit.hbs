<div class="container">
    <div class="vertical-space"></div>

    <div class="row">
        <div class="col-sm-12 text-center">
            <h2>Edit Badge Code</h2>
            <h3>#{{model.badgecode.id}}: {{model.badgecode.idString}}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <form>
                <div class="form-group">
                    <label for="badgecodeDescription">Description</label>
                    <input type="text" id="badgecodeDescription" class="form-control" placeholder="description"
                           value="{{model.badgecode.description}}">
                </div>

                <div class="form-group">
                    <label for="badgeID">Badge ID</label>
                     <input type="text" id="badgeID" class="form-control" placeholder="description"
                           value="{{model.badgecode.badgeID}}">
                </div>

                <button id="saveButton" type="submit" class="btn btn-default pull-right" {{action 'save' model.badgecode.id}}>
                    Save
                </button>
            </form>
        </div>
    </div>
</div>