<div class="container">
    <div class="vertical-space"></div>

    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Delete News Post</h2>
            <h3>{{model.post.title}}</h3>
            <p>Are you sure you want to delete this post?</p>
            <div class="btn-group">
                <button type="button" class="btn btn-default" {{action 'cancel'}}>Cancel</button>
                <button type="button" class="btn btn-danger" {{action 'delete' model.post.id}}>Delete</button>
            </div>
        </div>
    </div>
</div>