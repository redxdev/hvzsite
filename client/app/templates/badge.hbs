<div class="container">
    <div class="vertical-space"></div>

  {{#if model.notLoggedIn}}
      <div class="row">
          <div class="col-md-12 text-center">
              <h2>Whoops!</h2>
              <p>You need to be logged in to claim a badge!.</p>
          </div>
      </div>
  {{else}}
  	<div class="col-md-12 text-center">
        <h2>Claim a Badge</h2>
    </div>
    <br>
  	<div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form>
                <div class="form-group">
                    <label for="badgecode">Badge Code</label>
                    <input type="text" class="form-control" id="badgecode" placeholder="badge code" maxlength="10">
                </div>
                <button id="badgeButton" type="submit" class="btn btn-default" {{action 'submitBadge'}}>Submit</button>
            </form>
        </div>
    </div>
  {{/if}}
</div>