<div class="container">
    <div class="vertical-space"></div>

    <div class="row">
        <div class="col-sm-12 text-center">
            <h2>Create Poll</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <form>
                <div class="form-group">
                    <label for="pollTitle">Title</label>
                    <input type="text" id="pollTitle" class="form-control" placeholder="title">
                </div>

                <div class="form-group">
                    <label for="pollTeam">Team</label>
                    <select class="form-control" id="pollTeam">
                        <option value="all" selected>All</option>
                        <option value="human">Human</option>
                        <option value="zombie">Zombie</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="pollPostDate">Post Date</label>
                    <input type="datetime-local" id="pollPostDate" class="form-control">
                </div>

                <div class="form-group">
                    <label for="pollEndDate">End Date</label>
                    <input type="datetime-local" id="pollEndDate" class="form-control">
                </div>

                <div class="form-group">
                    <label for="pollBody">Body</label>
                    <textarea id="pollBody" class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <label for="pollQuestion">Question</label>
                    <input type="text" id="pollQuestion" class="form-control" placeholder="question">
                </div>

                <div>
                    <label>Options</label>
                    <div id="poll-options">

                    </div>
                    <button type="button" class="btn btn-primary" {{action 'addOption'}}>
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </div>

                <button id="saveButton" type="submit" class="btn btn-default pull-right" {{action 'save'}}>
                    Save
                </button>
            </form>
        </div>
    </div>
</div>