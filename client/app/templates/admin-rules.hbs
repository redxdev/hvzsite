<div class="container">
    <div class="vertical-space"></div>

    <div class="row">
        <div class="col-md-5 col-sm-4">
          {{#link-to 'admin-rules-create' class='btn btn-primary'}}
              <span class="glyphicon glyphicon-plus"></span>
          {{/link-to}}
        </div>
    </div>

    <div class="vertical-space"></div>

  {{#each model.rules as |rule|}}
      <div class="row well">
          <div class="col-sm-12">
              <div class="row">
                  <div class="col-sm-8">
                      <h2>{{rule.title}}</h2>
                  </div>
                  <div class="col-sm-4">
                      <ul class="nav nav-stacked nav-pills">
                          <li>{{#link-to 'admin-rules-edit' rule.id}}Edit{{/link-to}}</li>
                          <li><a href="#">Delete</a></li>
                      </ul>
                  </div>
              </div>
              <div class="row">
                  <div class="col-sm-12">
                    {{{rule.body}}}
                  </div>
              </div>
          </div>
      </div>
  {{else}}
      <div class="row">
          <div class="col-md-12 text-center">
              <h1>There were no rules found.</h1>
          </div>
      </div>
  {{/each}}
</div>