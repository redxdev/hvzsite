<div class="container">
    <div class="vertical-space"></div>

    <div class="row">
        <div class="col-sm-12 text-center">
            <h2>Create Player</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-4 col-sm-4">
            <form>
                <div class="form-group">
                    <label for="playerName">Name</label>
                    <input type="text" id="playerName" class="form-control" placeholder="player name"
                           value="{{model.player.name}}">
                </div>

                <div class="form-group">
                    <label for="playerEmail">Email</label>
                    <input type="text" id="playerEmail" class="form-control" placeholder="player email"
                           value="{{model.player.email}}">
                </div>

                <button id="saveButton" type="submit" class="btn btn-default pull-right" {{action 'save'}}>
                    Save
                </button>
            </form>
        </div>
    </div>
</div>