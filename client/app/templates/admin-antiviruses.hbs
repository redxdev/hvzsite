<div class="container">
    <div class="vertical-space"></div>

    <div class="row">
        <div class="col-md-5 col-sm-4">
          {{#link-to 'admin-antiviruses-create' class='btn btn-primary'}}
              <span class="glyphicon glyphicon-plus"></span>
          {{/link-to}}
        </div>
    </div>

    <div class="vertical-space"></div>

  {{#each model.antiviruses as |av|}}
      <div class="row well">
          <div class="col-sm-12">
              <div class="row">
                  <div class="col-sm-8">
                      <h3>
                          #{{av.id}}:

                        {{#if av.active}}
                          {{av.idString}}
                        {{else}}
                            <s>{{av.idString}}</s>
                        {{/if}}

                        {{#if av.user}}
                            <strongs>Used by:</strongs> {{av.user.name}}
                        {{/if}}
                      </h3>
                      <p>
                          <strong>Expires: </strong>
                        {{format-time av.expirationTime
                        hour='numeric' minute='numeric' second='numeric' year='numeric' month='numeric' day='numeric'}}

                          <em>{{format-relative av.expirationTime}}</em>
                      </p>
                      <p><strong>Description:</strong> {{av.description}}</p>
                  </div>
                  <div class="col-sm-4">
                      <ul class="nav nav-stacked nav-pills">
                          <li>{{#link-to 'admin-antiviruses-edit' av.id}}Edit{{/link-to}}</li>
                          <li>{{#link-to 'admin-antiviruses-delete' av.id}}Delete{{/link-to}}</li>
                      </ul>
                  </div>
              </div>
          </div>
      </div>
  {{else}}
      <div class="row">
          <div class="col-md-12 text-center">
              <h1>There were no antiviruses found.</h1>
          </div>
      </div>
  {{/each}}
</div>