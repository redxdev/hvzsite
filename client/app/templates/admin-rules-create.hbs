<div class="container">
    <div class="vertical-space"></div>

    <div class="row">
        <div class="col-sm-12 text-center">
            <h2>Create Rule</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <form>
                <div class="form-group">
                    <label for="ruleTitle">Title</label>
                    <input type="text" id="ruleTitle" class="form-control" placeholder="title">
                </div>

                <div class="form-group">
                    <label for="rulePosition">Position</label>
                    <input type="number" id="rulePosition" class="form-control" value="1">
                </div>

                <div class="form-group">
                    <label for="ruleBody">Body</label>
                    <textarea id="ruleBody" class="form-control"></textarea>
                </div>

                <button id="saveButton" type="submit" class="btn btn-default pull-right" {{action 'save'}}>
                    Save
                </button>
            </form>
        </div>
    </div>
</div>