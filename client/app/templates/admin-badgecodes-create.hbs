<div class="container">
    <div class="vertical-space"></div>

    <div class="row">
        <div class="col-sm-12 text-center">
            <h2>Create Badge Code</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <form>
                <div class="form-group">
                    <label for="badgecodeDescription">Description</label>
                    <input type="text" id="badgecodeDescription" class="form-control" placeholder="description">
                </div>

                <div class="form-group">
                    <label for="badgeID">Badge ID</label>
                    <input type="text" id="badgeID" class="form-control" placeholder="badgeID">
                </div>

                <button id="saveButton" type="submit" class="btn btn-default pull-right" {{action 'save'}}>
                    Save
                </button>
            </form>
        </div>
    </div>
</div>