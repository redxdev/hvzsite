<div class="container">
    <div class="vertical-space"></div>

    <div class="row">
        <div class="col-sm-12 text-center">
            <h2>Create Mission</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <form>
                <div class="form-group">
                    <label for="missionTitle">Title</label>
                    <input type="text" id="missionTitle" class="form-control" placeholder="title">
                </div>

                <div class="form-group">
                    <label for="missionTeam">Team</label>
                    <select class="form-control" id="missionTeam">
                        <option value="all" selected>All</option>
                        <option value="human">Human</option>
                        <option value="zombie">Zombie</option>
                    </select>
                </div>

              <div class="form-group">
                  <label for="missionPostDate">Post Date</label>
                  <input type="datetime-local" id="missionPostDate" class="form-control">
              </div>

              <div class="form-group">
                  <label for="missionEndDate">End Date</label>
                  <input type="datetime-local" id="missionEndDate" class="form-control">
              </div>

                <div class="form-group">
                    <label for="missionBody">Body</label>
                    <textarea id="missionBody" class="form-control"></textarea>
                </div>

                <button id="saveButton" type="submit" class="btn btn-default pull-right" {{action 'save'}}>
                    Save
                </button>
            </form>
        </div>
    </div>
</div>